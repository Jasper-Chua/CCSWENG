	<script>
	// Checks if there are error messages to automatically open the modal.
	$( document ).ready(function() {
		var addCakeErrors = '<%= error_msg %>';
		var editCakeErrors = '<%= editCakeError_msg %>';
		if(addCakeErrors.length > 0) {
			$('#cakeModal').css('display', 'block')
		} else if (editCakeErrors.length > 0) {
			alert('Edit Failed!!!\n' + editCakeErrors)
		}

		// Get the modal
		var modal = document.getElementsByClassName("modal")[0];
		var modals = document.getElementsByClassName("modals");
		// Get the button that opens the modal
		var btn = document.getElementById("add");
		var btn2 = document.getElementsByClassName("Edit");
		// Get the <span> element that closes the modal
		var cancel = document.getElementsByClassName("Cancel");
		var Close = document.getElementsByClassName("close");
		// When the user clicks the button, open the modal 
		btn.onclick = function() {
			modal.style.display = "block";
		}
			
		for(var i = 0; i < btn2.length; i++){
			btn2[i].onclick = function() {
				for (var index in modals) {
					if (typeof modals[index].style !== 'undefined') 
						modals[index].style.display = "block";    
				}
			}
		}

		// When the user clicks on <span> (x), close the modal
		cancel[0].onclick = function() {
				modal.style.display = "none";
			}
		
		for (var i = 1; i < cancel.length; i++) {
			cancel[i].onclick = function() {
				for (var index in modals) {
					if (typeof modals[index].style !== 'undefined') 
						modals[index].style.display = "none";    
				}
			}
		}
		
		Close[0].onclick = function() {
			modal.style.display = "none";
		}
		
		for (var i = 1; i < Close.length; i++) {
			Close[i].onclick = function() {
				for (var index in modals){
					if (typeof modals[index].style !== 'undefined') 
						modals[index].style.display = "none";   
				}
			}
		}

		// When the user clicks anywhere outside of the modal, close it
		window.onclick = function(event) {
			if (event.target == modal) {
				modal.style.display = "none";
			}
			else{
				if (event.target.classList.contains('modals')) {
					for (var index in modals) {
						if (typeof modals[index].style !== 'undefined') 
							modals[index].style.display = "none";    
					}
				}
			}
		}

		/*
		// Checks if the inputted product name is already available in the database
		$('.inputName').keyup(function () {
			var productName = $(this).val()
			var productType = window.location.pathname.split("/").pop()
			
				if (result) {
					$('.inputName').css('border-color', 'red')
					$('#errorName').text('Cake is already available!')
					$('#errorName').css('color', 'red')
					$('#addl').prop('disabled', true)
				} else {
					$('.inputName').css('border-color', 'green')
					$('#errorName').text('')
					$('#addl').prop('disabled', false)
				}
			})
		})
		*/

		// Loads an image to the preview part of the add and edit modals of the cake page.
		$('.myFile').change(function() {
			var file = $(this)[0].files[0]
			if (file) {
				var validImageTypes = ["image/jpg", "image/jpeg", "image/png"];
				var isValid = validImageTypes.includes(file.type)
				if (isValid) {
					var reader = new FileReader();
					reader.onload = function (image) {
						$('.previewPic').attr('src', image.target.result)
					};
					reader.readAsDataURL(file);
					$('.myFile').css('border-style', 'none')
				} else if (!isValid) {
					$('.myFile').css('border-style', 'solid')
					$('.myFile').css('border-color', 'red')
					$('.myFile').css('border-width', '2px')
					$('.previewPic').removeAttr('src');
					$(this).val('')
				}
			} else {
				$('.myFile').css('border-style', 'none')
				$('.previewPic').removeAttr('src');
				$(this).val('')
			}
		})

		$('.addProductForm').submit(function(e) {
			
			var name = $(this).find("[name='productName']").val()
			var image = $(this).find("[name='filename']").val()
			var type = window.location.pathname.split("/").pop()
			var vanillaPrice1 = $(this).find("[name='productPricesVanilla1']").val()
			var vanillaPrice2 = $(this).find("[name='productPricesVanilla2']").val()
			var chocolatePrice1 = $(this).find("[name='productPricesChocolate1']").val()
			var chocolatePrice2 = $(this).find("[name='productPricesChocolate2']").val()
			var checkedNumberCake = $(this).find("[name='productNumberCake']").prop('checked')
			var numberCakePrice = $(this).find("[name='productPricesNumberCake']").val()
			var errorCounter = 0
			if (name === '' || name == null) {
				$(this).find("[name='productName']").css('border-color', 'red')
				errorCounter++
			} else {
				$.get('/getProductInfo', {name: name, type: type}, function(result) {
					if (result) {
						$(this).find("[name='productName']").css('border-color', 'red')
						errorCounter++
					} else {
						$(this).find("[name='productName']").css('border-color', 'green')
					}
				})
			}
			if (image === '' || image == null) {
				$(this).find("[name='filename']").css('border-color', 'red')
				$(this).find("[name='filename']").css('border-style', 'solid')
				$(this).find("[name='filename']").css('border-width', '2px')
				errorCounter++
			} else {
				$(this).find("[name='filename']").css('border-color', 'green')
			}
			if (!checkedNumberCake) {
				if (vanillaPrice1 === '' || vanillaPrice1 == null || !Number.isInteger(vanillaPrice1)) {
					$(this).find("[name='productPricesVanilla1']").css('border-color', 'red')
					errorCounter++
				} else {
					$(this).find("[name='productPricesVanilla1']").css('border-color', 'green')
				}
				if (vanillaPrice2 === '' || vanillaPrice2 == null || !Number.isInteger(vanillaPrice2)) {
					$(this).find("[name='productPricesVanilla2']").css('border-color', 'red')
					errorCounter++
				} else {
					$(this).find("[name='productPricesVanilla2']").css('border-color', 'green')
				}
				if (chocolatePrice1 === '' || chocolatePrice1 == null || !Number.isInteger(chocolatePrice1)) {
					$(this).find("[name='productPricesChocolate1']").css('border-color', 'red')
					errorCounter++
				} else {
					$(this).find("[name='productPricesChocolate1']").css('border-color', 'green')
				}
				if (chocolatePrice2 === '' || chocolatePrice2 == null || !Number.isInteger(chocolatePrice2)) {
					$(this).find("[name='productPricesChocolate2']").css('border-color', 'red')
					errorCounter++
				} else {
					$(this).find("[name='productPricesChocolate2']").css('border-color', 'green')
				}
			} else {
				if (numberCakePrice === '' || numberCakePrice == null || !Number.isInteger(numberCakePrice)) {
					$(this).find("[name='productPricesNumberCake']").css('border-color', 'red')
					errorCounter++
				} else {
					$(this).find("[name='productPricesNumberCake']").css('border-color', 'green')
				}
			}
			

			if (errorCounter > 0) {
				e.preventDefault()
				console.log('There was an error')
			} 
		})

		// Modal of the add product (Initializes the modal)
		$('.AddA').click(function() {
			var addModal = $('#cakeModal')
			addModal.find('.inputName').val('')
			addModal.find('.inputName').css('border-color', '#6F4E37')
			addModal.find(".input").val('');
			addModal.find("#errorName").text('');
			addModal.find(".input").attr('placeholder', 'Enter Price');
			addModal.find("[name='productDedication']").prop('checked', false)
			addModal.find(".inputCheckbox").prop('checked', false)
		})

		// Modal of the edit product (Shows the current information of the product)
		$('.Edit').click(function() {
			var border = $(this).parents('.border')
			var editModal = $('#editcakeModal')
			editModal.find(".input").val(0)
			editModal.find(".inputNum").val(0)
			var productName = border.children('#displayProductName').text()
			var productType = window.location.pathname.split("/").pop()
			$.get('/getProductInfo', {name: productName, type: productType}, function(result) {
				editModal.find("[name='productName']").val(result.name)
				editModal.find(".productID").val(result._id)
				editModal.find(".myFile").val('')
				editModal.find(".previewPic").attr('src', result.image)
				if (result.numberCake == false) {
					editModal.find("[name='productPricesVanilla1']").val(result.vanilla6x5Price)
					editModal.find("[name='productPricesVanilla2']").val(result.vanilla8x5Price)
					editModal.find("[name='productPricesChocolate1']").val(result.chocolate6x5Price)
					editModal.find("[name='productPricesChocolate2']").val(result.chocolate8x5Price)
					editModal.find("[name='productNumberCake']").prop('checked', false)
					if (result.dedication == true) {
						editModal.find("[name='productDedication']").prop('checked', true)
					} else {
						editModal.find("[name='productDedication']").prop('checked', false)
					}
				} else {
					editModal.find("[name='productNumberCake']").prop('checked', true)
					$('#editcakeModal .inputCheckbox').trigger('change')
					editModal.find("[name='productPricesNumberCake']").val(result.numberCakePrice)
				}
			})
		})
		
		// Remove a product from the view and call the delete function from the controller
		$('.Remove').click(function() {
			if (confirm('Are you sure you want to delete the product?') == true) {
				var border = $(this).parents('.border')
				var productName = border.children('#displayProductName').text()
				var productType = window.location.pathname.split("/").pop()
				var productImage = border.find('img').attr('src')
				border.empty()
				border.remove()
				var numberofProducts = $('.border').length
				$.get('/deleteProduct', {name: productName, image: productImage, type: productType}, function(result) {
					alert(result)
					if (numberofProducts == 0) {
						const params = new Proxy(new URLSearchParams(window.location.search), {
  							get: (searchParams, prop) => searchParams.get(prop),
						});
						let value = params.pageNumber; 
						window.location.assign( '/Admin/' + productType + '?pageNumber=' + (value - 1))
					} else {
						window.location.reload()
					}
				})
			}
			
		})

		// Hide textboxes from add product modal that are not needed for a certain type of product 
		$('#cakeModal .inputCheckbox').change(function() {
			if ($(this).is(":checked") == true) {
				$(".input").val(0)
				$(".input").hide()
				$(".inputCheckboxD").hide()
				$(".flavorCake").hide()
				$('.inputNum').val('')
				$(".inputNum").attr('placeholder', 'Enter Price');
				$(".inputNum").show()
				$(".numberCake").show()
			} else {
				$(".input").val('')
				$(".input").attr('placeholder', 'Enter Price');
				$(".input").show()
				$(".inputCheckboxD").prop('checked', false)
				$(".inputCheckboxD").show()
				$(".flavorCake").show()
				$(".inputNum").val(0)
				$(".inputNum").hide()
				$(".numberCake").hide()
			}
		})

		// Hide textboxes from edit product modal that are not needed for a certain type of product 
		$('#editcakeModal .inputCheckbox').change(function() {
			if ($(this).is(":checked") == true) {
				$(".input").hide()
				$(".inputCheckboxD").hide()
				$(".flavorCake").hide()
				$(".inputNum").show()
				$(".numberCake").show()
			} else {
				$(".input").show()
				$(".inputCheckboxD").prop('checked', false)
				$(".inputCheckboxD").show()
				$(".flavorCake").show()
				$(".inputNum").hide()
				$(".numberCake").hide()
			}
		})
	});
	

	</script>
